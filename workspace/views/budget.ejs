<!DOCTYPE HTML>
<html lang="en">
	<head>
		<title>BLISS BUDGET</title>
		<meta charset="utf-8">
	</head>
<body>
    <% budgets.forEach(function(budget){ %>
        <li><%= budget.name %> 
            <ul>
                <p><%= budget.amount %> <%= budget.category %> </p>
                <ul>
                    <p> <%= budget.date %> </p>
                </ul>
            </ul>
        </li> 
    <% }); %>
    
    
    		
